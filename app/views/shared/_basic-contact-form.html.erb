<div class="content text-center">
  <h2 class="no-margin">Get in Touch</h2>
  <hr>
  <div class="contact-form">
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true, :label => false, placeholder: "Your Name" %>
    <%= f.input :email, :required => true, :label => false, placeholder: "Your Email" %>
    <%= f.input :message, :as => :text, :required => true, :label => false, placeholder: "Your Message"  %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
    </br>
    <%= f.button :submit, 'Send message', :class=> "btn btn-pill btn-primary btn-block" %>
  </div>
  <% end %>
</div>
